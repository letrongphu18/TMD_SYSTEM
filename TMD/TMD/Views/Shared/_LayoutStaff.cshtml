@inject TMD.Models.TmdContext _dbContext
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMD Staff</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
	<link href="~/css/layoutstaff.css" rel="stylesheet" />

    <!-- ✅ CUSTOM CSS FROM DATABASE -->
    @{
        var customCss = "";
        try
        {
            customCss = TMDSystem.Controllers.SettingsController.GetSettingValue(_dbContext, "CUSTOM_CSS");
        }
        catch { }
    }

    @if (!string.IsNullOrWhiteSpace(customCss))
    {
        <style id="staff-custom-css">
            /* CUSTOM CSS - Áp dụng cho Staff */
            @Html.Raw(customCss)
        </style>
    }
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Staff/Dashboard">
                <i class="fas fa-briefcase"></i>
                <span>TMD System</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/Dashboard">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/MyTasks">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Công việc</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/AttendanceHistory">
                            <i class="fas fa-history"></i>
                            <span>Lịch sử chấm công</span>
                        </a>
                    </li>

                    <!-- USER DROPDOWN -->
                    <li class="nav-item dropdown ms-3">
                        <a class="user-dropdown dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@Context.Session.GetString("Avatar")" alt="Avatar" class="user-avatar" />
                            <div class="user-info d-none d-lg-block">
                                <div class="user-name">@Context.Session.GetString("FullName")</div>
                                <div class="user-role">@Context.Session.GetString("RoleName")</div>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="/Staff/Profile">
                                    <i class="fas fa-user-circle"></i>
                                    <span>Hồ sơ cá nhân</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/Staff/MyRequests">
                                    <i class="fas fa-file-alt"></i>
                                    <span>Đề xuất của tôi</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="/Account/Logout">
                                    <i class="fas fa-sign-out-alt"></i>
                                    <span>Đăng xuất</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container-custom">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle"></i>
                <div>
                    <strong>Thành công!</strong>
                    <p class="mb-0">@TempData["Success"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i>
                <div>
                    <strong>Lỗi!</strong>
                    <p class="mb-0">@TempData["Error"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show">
                <i class="fas fa-exclamation-triangle"></i>
                <div>
                    <strong>Cảnh báo!</strong>
                    <p class="mb-0">@TempData["Warning"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show">
                <i class="fas fa-info-circle"></i>
                <div>
                    <strong>Thông tin!</strong>
                    <p class="mb-0">@TempData["Info"]</p>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </div>

    <!-- SCROLL TO TOP BUTTON -->
    <div class="scroll-to-top" id="scrollToTop">
        <i class="fas fa-arrow-up"></i>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Active Navigation Link
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                }
            });

            // Scroll to Top Button
            const scrollBtn = document.getElementById('scrollToTop');

            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    scrollBtn.classList.add('show');
                } else {
                    scrollBtn.classList.remove('show');
                }
            });

            scrollBtn.addEventListener('click', function() {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });

            // Auto dismiss alerts after 5 seconds
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- ✅ CUSTOM JAVASCRIPT FROM DATABASE -->
    @{
        var customJs = "";
        try
        {
            customJs = TMDSystem.Controllers.SettingsController.GetSettingValue(_dbContext, "CUSTOM_JS");
        }
        catch { }
    }

    @if (!string.IsNullOrWhiteSpace(customJs))
    {
        <script id="staff-custom-js">
            // CUSTOM JS - Áp dụng cho Staff
            (function() {
            @Html.Raw(customJs)
            })();
        </script>
    }
</body>
</html>