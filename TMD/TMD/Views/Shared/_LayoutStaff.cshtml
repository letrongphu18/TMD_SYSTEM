@inject TMD.Models.TmdContext _dbContext
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TMD Staff</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    @{
        var customCss = "";
        try { customCss = TMD.Controllers.SettingsController.GetSettingValue(_dbContext, "CUSTOM_CSS"); } catch { }
    }
    @if (!string.IsNullOrWhiteSpace(customCss))
    {
        <style id="staff-custom-css">@Html.Raw(customCss)</style>
    }
</head>
<link href="~/css/layoutstaff.css" rel="stylesheet" />
<body>
    <audio id="notifSound" src="~/sounds/notification.wav" preload="auto"></audio>
    <div id="toast-container"></div>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Staff/Dashboard">
                <i class="fas fa-briefcase"></i><span>TMD System v1</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item"><a class="nav-link" href="/Staff/Dashboard"><i class="fas fa-home"></i><span>Dashboard</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/Staff/MyTasks"><i class="fas fa-clipboard-list"></i><span>Công việc</span></a></li>
                    <li class="nav-item"><a class="nav-link" href="/Staff/AttendanceHistory"><i class="fas fa-history"></i><span>Lịch sử chấm công</span></a></li>

                    <li class="nav-item dropdown ms-2">
                        <a class="nav-link notification-btn" href="#" id="notifDropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-bell fa-lg"></i>
                            <span class="notification-badge" id="notifBadge">0</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end notif-dropdown" aria-labelledby="notifDropdown">
                            <div class="p-2 border-bottom fw-bold text-primary">Thông báo mới</div>
                            <div id="notifList">
                                <div class="p-3 text-center text-muted small">Không có thông báo nào</div>
                            </div>
                            <div class="notif-clear-all">
                                <button onclick="clearAllNotifications()">
                                    <i class="fas fa-check-double me-1"></i> Đánh dấu đã đọc tất cả
                                </button>
                            </div>
                        </div>
                    </li>

                    <li class="nav-item dropdown ms-3">
                        <a class="user-dropdown dropdown-toggle" href="#" id="userDropdown" data-bs-toggle="dropdown">
                            <img src="@Context.Session.GetString("Avatar")" alt="Avatar" class="user-avatar" />
                            <div class="user-info d-none d-lg-block">
                                <div class="user-name">@Context.Session.GetString("FullName")</div>
                                <div class="user-role">@Context.Session.GetString("RoleName")</div>
                            </div>
                            <i class="fas fa-chevron-down"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="/Staff/Profile"><i class="fas fa-user-circle"></i><span>Hồ sơ cá nhân</span></a></li>
                            <li><a class="dropdown-item" href="/Staff/MyDepartment"><i class="fas fa-users"></i><span>Phòng ban của tôi</span></a></li>
                            <li><a class="dropdown-item" href="/Staff/MyRequests"><i class="fas fa-file-alt"></i><span>Yêu cầu của tôi</span></a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="/Account/Logout"><i class="fas fa-sign-out-alt"></i><span>Đăng xuất</span></a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-custom">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show"><i class="fas fa-check-circle"></i><div><strong>Thành công!</strong><p class="mb-0">@TempData["Success"]</p></div><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show"><i class="fas fa-exclamation-circle"></i><div><strong>Lỗi!</strong><p class="mb-0">@TempData["Error"]</p></div><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show"><i class="fas fa-exclamation-triangle"></i><div><strong>Cảnh báo!</strong><p class="mb-0">@TempData["Warning"]</p></div><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @if (TempData["Info"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show"><i class="fas fa-info-circle"></i><div><strong>Thông tin!</strong><p class="mb-0">@TempData["Info"]</p></div><button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        }
        @RenderBody()
    </div>

    <div class="scroll-to-top" id="scrollToTop"><i class="fas fa-arrow-up"></i></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>

    <script>
        // --- UI Scripts ---
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            document.querySelectorAll('.nav-link').forEach(link => {
                if (link.getAttribute('href') === currentPath) link.classList.add('active');
            });
            const scrollBtn = document.getElementById('scrollToTop');
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) scrollBtn.classList.add('show'); else scrollBtn.classList.remove('show');
            });
            scrollBtn.addEventListener('click', function() { window.scrollTo({ top: 0, behavior: 'smooth' }); });
            setTimeout(() => { document.querySelectorAll('.alert').forEach(a => new bootstrap.Alert(a).close()); }, 5000);
        });

        // --- ✅ SIGNALR NOTIFICATION LOGIC ---
        var connection = new signalR.HubConnectionBuilder().withUrl("/notificationHub").build();
        var notifications = []; // Lưu trữ thông báo

        connection.on("ReceiveMessage", function (title, message, type, link) {
            // 1. Play Sound
            var audio = document.getElementById("notifSound");
            if(audio) audio.play().catch(e => console.log("Cần tương tác để phát âm thanh"));

            // 2. Show Toast
            showFloatingToast(title, message, type);

            // 3. Lưu thông báo
            var notif = {
                id: Date.now(),
                title: title,
                message: message,
                type: type,
                link: link || null,
                time: new Date(),
                read: false
            };
            notifications.unshift(notif);

            // 4. Cập nhật badge
            updateNotifBadge();

            // 5. Render list
            renderNotifList();
        });

        connection.start().catch(err => console.error(err.toString()));

        function updateNotifBadge() {
            var unreadCount = notifications.filter(n => !n.read).length;
            var badge = document.getElementById("notifBadge");
            if (unreadCount > 0) {
                badge.innerText = unreadCount > 99 ? '99+' : unreadCount;
                badge.style.display = "block";
            } else {
                badge.style.display = "none";
            }
        }

        function renderNotifList() {
            var list = document.getElementById("notifList");
            if (notifications.length === 0) {
                list.innerHTML = '<div class="p-3 text-center text-muted small">Không có thông báo nào</div>';
                return;
            }

            var html = '';
            notifications.slice(0, 20).forEach(function(notif) {
                var timeStr = getTimeAgo(notif.time);
                var readClass = notif.read ? 'read' : 'unread';
                var linkAttr = notif.link ? `onclick="handleNotifClick(${notif.id}, '${notif.link}')"` : `onclick="markAsRead(${notif.id})"`;

                html += `
                    <div class="notif-item ${readClass}" ${linkAttr}>
                        <div class="notif-title">${notif.title}</div>
                        <div class="notif-msg">${notif.message}</div>
                        <div class="notif-time">${timeStr}</div>
                    </div>`;
            });

            list.innerHTML = html;
        }

        function handleNotifClick(id, link) {
            markAsRead(id);
            if (link) {
                window.location.href = link;
            }
        }

        function markAsRead(id) {
            var notif = notifications.find(n => n.id === id);
            if (notif && !notif.read) {
                notif.read = true;
                updateNotifBadge();
                renderNotifList();
            }
        }

        function clearAllNotifications() {
            notifications.forEach(n => n.read = true);
            updateNotifBadge();
            renderNotifList();
        }

        function getTimeAgo(date) {
            var seconds = Math.floor((new Date() - date) / 1000);
            if (seconds < 60) return 'Vừa xong';
            var minutes = Math.floor(seconds / 60);
            if (minutes < 60) return minutes + ' phút trước';
            var hours = Math.floor(minutes / 60);
            if (hours < 24) return hours + ' giờ trước';
            var days = Math.floor(hours / 24);
            return days + ' ngày trước';
        }

        function showFloatingToast(title, message, type) {
            var container = document.getElementById("toast-container");
            var color = type === 'success' ? '#27AE60' : (type === 'error' ? '#E74C3C' : '#3498DB');
            var div = document.createElement('div');
            div.className = "custom-toast";
            div.style.borderLeftColor = color;
            div.innerHTML = `
                <div style="flex:1">
                    <div style="font-weight:bold; margin-bottom:4px">${title}</div>
                    <div style="font-size:13px; color:#555">${message}</div>
                </div>
            `;
            container.appendChild(div);
            setTimeout(() => div.remove(), 5000);
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    @{
        var customJs = "";
        try { customJs = TMD.Controllers.SettingsController.GetSettingValue(_dbContext, "CUSTOM_JS"); } catch { }
    }
    @if (!string.IsNullOrWhiteSpace(customJs))
    {
        <script id="staff-custom-js">(function() { @Html.Raw(customJs) })();</script>
    }
    <script src="~/js/signalr-client.js"></script>
</body>
</html>